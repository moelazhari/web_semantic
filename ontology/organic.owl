<?xml version="1.0"?>
<rdf:RDF xmlns="http://example.org/organic#"
     xml:base="http://example.org/organic"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:ssn="http://www.w3.org/ns/ssn/"
     xmlns:sosa="http://www.w3.org/ns/sosa/">
    <owl:Ontology rdf:about="http://example.org/organic">
        <rdfs:label>Organic Agriculture Certification Ontology</rdfs:label>
        <rdfs:comment>Ontology for automatic certification of organic agriculture based on EU Regulation 2018/848</rdfs:comment>
        <owl:versionInfo>1.0</owl:versionInfo>
    </owl:Ontology>
    
    <!-- Classes -->
    
    <!-- Farm Classes -->
    <owl:Class rdf:about="#Farm">
        <rdfs:label>Farm</rdfs:label>
        <rdfs:comment>Agricultural farm entity</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#OrganicFarm">
        <rdfs:label>Organic Farm</rdfs:label>
        <rdfs:comment>Farm certified as organic according to EU 2018/848</rdfs:comment>
        <rdfs:subClassOf rdf:resource="#Farm"/>
    </owl:Class>
    
    <owl:Class rdf:about="#NonOrganicFarm">
        <rdfs:label>Non-Organic Farm</rdfs:label>
        <rdfs:comment>Farm that does not meet organic certification requirements</rdfs:comment>
        <rdfs:subClassOf rdf:resource="#Farm"/>
        <owl:disjointWith rdf:resource="#OrganicFarm"/>
    </owl:Class>
    
    <!-- Sample and Observation Classes -->
    <owl:Class rdf:about="#SoilSample">
        <rdfs:label>Soil Sample</rdfs:label>
        <rdfs:comment>Sample of soil collected from farm for analysis</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://www.w3.org/ns/sosa/Sample"/>
    </owl:Class>
    
    <owl:Class rdf:about="#Observation">
        <rdfs:label>Observation</rdfs:label>
        <rdfs:comment>IoT sensor observation of pesticide levels</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://www.w3.org/ns/sosa/Observation"/>
    </owl:Class>
    
    <!-- Pesticide Classes -->
    <owl:Class rdf:about="#Pesticide">
        <rdfs:label>Pesticide</rdfs:label>
        <rdfs:comment>Chemical pesticide substance</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#AllowedPesticide">
        <rdfs:label>Allowed Pesticide</rdfs:label>
        <rdfs:comment>Pesticide allowed in organic farming under EU 2018/848</rdfs:comment>
        <rdfs:subClassOf rdf:resource="#Pesticide"/>
    </owl:Class>
    
    <owl:Class rdf:about="#ProhibitedPesticide">
        <rdfs:label>Prohibited Pesticide</rdfs:label>
        <rdfs:comment>Pesticide prohibited in organic farming</rdfs:comment>
        <rdfs:subClassOf rdf:resource="#Pesticide"/>
        <owl:disjointWith rdf:resource="#AllowedPesticide"/>
    </owl:Class>
    
    <!-- Certification Classes -->
    <owl:Class rdf:about="#Certification">
        <rdfs:label>Certification</rdfs:label>
        <rdfs:comment>Organic certification document</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#OrganicCertification">
        <rdfs:label>Organic Certification</rdfs:label>
        <rdfs:comment>Official organic certification based on EU 2018/848</rdfs:comment>
        <rdfs:subClassOf rdf:resource="#Certification"/>
    </owl:Class>
    
    <!-- Regulation Class -->
    <owl:Class rdf:about="#Regulation">
        <rdfs:label>Regulation</rdfs:label>
        <rdfs:comment>Legal regulation governing organic farming</rdfs:comment>
    </owl:Class>
    
    <!-- Object Properties -->
    
    <owl:ObjectProperty rdf:about="#hasSoilSample">
        <rdfs:label>has soil sample</rdfs:label>
        <rdfs:comment>Farm has a soil sample taken for analysis</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="#SoilSample"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#hasPesticide">
        <rdfs:label>has pesticide</rdfs:label>
        <rdfs:comment>Sample contains detected pesticide</rdfs:comment>
        <rdfs:domain rdf:resource="#SoilSample"/>
        <rdfs:range rdf:resource="#Pesticide"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#hasCertification">
        <rdfs:label>has certification</rdfs:label>
        <rdfs:comment>Farm has organic certification</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="#Certification"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#violatesRegulation">
        <rdfs:label>violates regulation</rdfs:label>
        <rdfs:comment>Farm violates specific regulation</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="#Regulation"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#hasObservation">
        <rdfs:label>has observation</rdfs:label>
        <rdfs:comment>Sample has IoT sensor observation</rdfs:comment>
        <rdfs:domain rdf:resource="#SoilSample"/>
        <rdfs:range rdf:resource="#Observation"/>
    </owl:ObjectProperty>
    
    <!-- Data Properties -->
    
    <owl:DatatypeProperty rdf:about="#hasValue">
        <rdfs:label>has value</rdfs:label>
        <rdfs:comment>Numeric concentration value in mg/kg</rdfs:comment>
        <rdfs:domain rdf:resource="#SoilSample"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#certificationDate">
        <rdfs:label>certification date</rdfs:label>
        <rdfs:comment>Date when certification was issued</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#certificationStatus">
        <rdfs:label>certification status</rdfs:label>
        <rdfs:comment>Current status of organic certification</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#hasViolationReason">
        <rdfs:label>has violation reason</rdfs:label>
        <rdfs:comment>Reason for regulation violation</rdfs:comment>
        <rdfs:domain rdf:resource="#Farm"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#maxAllowedLevel">
        <rdfs:label>maximum allowed level</rdfs:label>
        <rdfs:comment>Maximum allowed concentration for organic certification</rdfs:comment>
        <rdfs:domain rdf:resource="#Pesticide"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
    </owl:DatatypeProperty>
    
    <!-- Individuals - Allowed Pesticides -->
    
    <owl:NamedIndividual rdf:about="#Glyphosate">
        <rdf:type rdf:resource="#AllowedPesticide"/>
        <rdfs:label>Glyphosate</rdfs:label>
        <maxAllowedLevel rdf:datatype="http://www.w3.org/2001/XMLSchema#float">0.25</maxAllowedLevel>
        <rdfs:comment>Allowed in limited quantities under specific conditions</rdfs:comment>
    </owl:NamedIndividual>
    
    <owl:NamedIndividual rdf:about="#Pyrethrin">
        <rdf:type rdf:resource="#AllowedPesticide"/>
        <rdfs:label>Pyrethrin</rdfs:label>
        <maxAllowedLevel rdf:datatype="http://www.w3.org/2001/XMLSchema#float">0.15</maxAllowedLevel>
        <rdfs:comment>Natural pesticide allowed in organic farming</rdfs:comment>
    </owl:NamedIndividual>
    
    <!-- Individuals - Prohibited Pesticides -->
    
    <owl:NamedIndividual rdf:about="#DDT">
        <rdf:type rdf:resource="#ProhibitedPesticide"/>
        <rdfs:label>DDT</rdfs:label>
        <maxAllowedLevel rdf:datatype="http://www.w3.org/2001/XMLSchema#float">0.0</maxAllowedLevel>
        <rdfs:comment>Completely prohibited in organic farming</rdfs:comment>
    </owl:NamedIndividual>
    
    <owl:NamedIndividual rdf:about="#Atrazine">
        <rdf:type rdf:resource="#ProhibitedPesticide"/>
        <rdfs:label>Atrazine</rdfs:label>
        <maxAllowedLevel rdf:datatype="http://www.w3.org/2001/XMLSchema#float">0.0</maxAllowedLevel>
        <rdfs:comment>Prohibited herbicide in organic farming</rdfs:comment>
    </owl:NamedIndividual>
    
    <!-- Regulation Individual -->
    
    <owl:NamedIndividual rdf:about="#EU_2018_848">
        <rdf:type rdf:resource="#Regulation"/>
        <rdfs:label>EU Regulation 2018/848</rdfs:label>
        <rdfs:comment>European Union regulation on organic production and labelling</rdfs:comment>
    </owl:NamedIndividual>
    
    <!-- Certification Individual -->
    
    <owl:NamedIndividual rdf:about="#OrganicCert">
        <rdf:type rdf:resource="#OrganicCertification"/>
        <rdfs:label>EU Organic Certification</rdfs:label>
        <rdfs:comment>Official EU organic certification document</rdfs:comment>
    </owl:NamedIndividual>
    
</rdf:RDF>